<div class="modal fade" id="editAccountModal" tabindex="-1" role="dialog" aria-labelledby="editAccountModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Edit Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

				<% flash.keys.each do |type| %>
					<div data-alert class="alert alert-<%= type %>">
						<%= flash[type] %>
					</div>
				<% end %>

      </div>
      <% if @current_account %> 
      	<form method="POST" class="needs-validataion" action="/accounts/<%= @current_account.id %>">
					<input type="hidden" name="_method" value="PATCH">
		      <div class="modal-body">
						<div class="container center">
								<div class="form-group">
									<label for="accountName" class="col-form-label">Name:</label><br>
									<input type="text" class="form-control" placeholder="<%= @current_account.account_name %>" name="account_name"><br>
									  <div class="valid-feedback">
							        Looks good!
							      </div>

									<label for="accountPrincipal" class="col-form-label">Principal:</label><br>
									<input type="number" class="form-control" placeholder="<%= @current_account.principal %>" name="principal"><br>

									<label for="accountMinPayment" class="col-form-label">Minimum Monthly Payment:</label><br>
									<input type="number" min="" class="form-control" placeholder="<%= @current_account.min_payment %>" name="min_payment" step="any" required><br>
									<div class="valid-feedback">
										<p class="minPaymentSuggestion"></p>
						      </div>
									<div class="invalid-feedback">
										Increase your minimum payment.
									</div>

								  <input class="editMinOnly" type="checkbox" name="min_only" value="">
								  <label class="col-form-label" for="minOnly">
								    Pay the minimum only?
								  </label><br>

									<label for="accountAPR" class="col-form-label">APR:</label><br>
									<input type="number" class="form-control" placeholder="<%= @current_account.apr %>" name="apr"><br>

									<label for="accountDueDate" class="col-form-label">Due Date:</label><br>
									<input type="number" class="form-control" placeholder="<%= @current_account.due_date %>" name="due_date"><br>
								</div>
						</div>
		      </div>

		      <!-- Buttons go here. -->
		      <div class="modal-footer">
		      	<!-- Save has to be first so that users hitting enter on the form choose save rather than Delete -->
				      <button type="submit" class="btn btn-success" value="UPDATE">Save</button>
				      <!-- Closes the top form with information passing. -->
				    </form>
				    <form method="POST" action="/accounts/<%= @current_account.id %>">
							<input type="hidden" name="_method" value="DELETE">
				        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				      	<button type="submit" class="btn btn-danger" name="_method" value="delete">DELETE</button>
				    </form>
				  </div>
			<% end %>
    </div>
  </div>
</div>
