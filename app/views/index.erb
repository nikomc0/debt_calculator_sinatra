								<h6 class="mb-0">Accounts</h6>
							</div>
							<!-- Button trigger modal -->
							<div class="col">
								<i id="account" class="fas fa-plus" style="font-size: 1rem;" data-toggle="modal" data-target="#newAccount"></i>
							</div>
						</div>
						<% if $accounts %>
							<%= erb(:accounts) %>
						<% end %>

						<!-- Modal -->
						<%= erb(:'accounts/_new') %>

						<%= erb(:'accounts/_edit') %>
					</div>
					

					<div class="col-8 table-responsive">
						<table class="table table-hover">
							<% if @current_account %>
								<%= erb(:'accounts/_edit') %>
								<%= erb(:account) %>
							<% end %>	
						</table>
					</div>

					<!-- 
						<div class="show-more">
